	File = {:C$\backslash$:/Users/thoma/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Zhang et al. - 2015 - Responses of plant community composition and biomass production to warming and nitrogen deposition in a temperate.pdf:pdf},
	Issn = {19326203},
	Journal = {PLoS ONE},
	Number = {4: e0123160},
	Pages = {1--16},
	Title = {{Responses of plant community composition and biomass production to warming and nitrogen deposition in a temperate meadow ecosystem}},
	Volume = {10},
	Year = {2015},
