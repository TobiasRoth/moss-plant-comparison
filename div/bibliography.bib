	Doi = {10.1016/j.baae.2007.01.005},
	File = {:C$\backslash$:/Users/thoma/Downloads/1-s2.0-S1439179107000126-main.pdf:pdf},
	Issn = {16180089},
	Journal = {Basic and Applied Ecology},
	Keywords = {Alpine-nival ecosystems,Climate change,Diaspore,Historical records,Long-term observation,Monitoring,Species richness,Wind-dispersion},
	Pages = {100--107},
	Title = {{Upward migration of vascular plants following a climate warming trend in the Alps}},
