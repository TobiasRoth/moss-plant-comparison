	File = {:C$\backslash$:/Users/thoma/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Giezendanner et al. - 2019 - A minimalist model of extinction and range dynamics of virtual mountain species driven by warming temperatu.pdf:pdf},
	Isbn = {1111111111},
	Issn = {19326203},
	Journal = {PLoS ONE},
	Number = {3: e0213775},
	Pages = {1--19},
	Title = {{A minimalist model of extinction and range dynamics of virtual mountain species driven by warming temperatures}},
